<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: base.pt">

<div metal:fill-slot="content">
    <h1>Please Provide your password to share the file</h1>
    ${form.begin(request.route_url('share_file', filename=filename))}
        <fieldset>
            ${form.csrf_token()}
            ${form.errorlist('share_user')}
            ${form.select('share_user', sharable_users, sharable_users, multiple=True)}
            <br>
            ${form.errorlist('password')}
            ${form.label('password', 'Password:')}
            ${form.password('password')}
            ${form.submit('form.submitted', 'Share', class_='submit')}
        </fieldset>
    ${form.end()}
</div>

</html>
